<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="-1dp"
        android:background="#751837"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:text="TÜRKİYE'DE GEZİLEBİLECEK YERLER!"
        android:textColor="#EAE0E0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="576dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/adiyaman"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="154dp"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:scrollIndicators="start"
        android:scrollHorizontally="true"
        android:text="Sonraki Resim"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="537dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="154dp"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginTop="7dp"
        android:scrollIndicators="start"
        android:scrollHorizontally="true"
        android:text="Önceki Resim"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="537dp" />

</RelativeLayout>